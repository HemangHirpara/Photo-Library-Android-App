<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.photoapp2">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".AddEditAlbum"
                android:label="Add/Edit Album"
                android:parentActivityName=".AlbumView"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.photoapp2.AlbumView"/>
        </activity>
        <activity
                android:name=".AddEditPhoto"
                android:label="Add/Edit Photo"
                android:parentActivityName=".PhotoView"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.photoapp2.PhotoView"/>
        </activity>
        <activity
                android:name=".PhotoView"
                android:label="List of Albums"
                android:parentActivityName=".AlbumView"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.photoapp2.AlbumView"/>
        </activity>
        <activity android:name=".AlbumView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>